<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginStart="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/answerd_question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_black"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_margin="5dp"
        android:elevation="10dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="5dp">

        <TextView
            android:id="@+id/answerd_question_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="question ?"
            android:lines="2"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingStart="8dp"
            android:paddingTop="6dp"
            android:background="@color/dark_white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

            <TextView
                android:id="@+id/answerd_question_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="answer answer answer answer answer"
                android:lines="4"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/answerd_question_question"
                app:layout_constraintStart_toStartOf="parent"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>