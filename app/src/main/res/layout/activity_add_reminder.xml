<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_white"
    tools:context="com.example.crazynet.medicalhub.AddReminderActivity">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="308dp"
        android:layout_height="335dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:numbersBackgroundColor="@color/red_light"
        style="@style/myTimePickerStyle"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/txt_name_medical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="15dp"/>

    <EditText
        android:id="@+id/name_medical"
        android:layout_width="270dp"
        android:layout_height="40dp"
        android:hint="Midicine Name"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        app:layout_constraintStart_toEndOf="@id/txt_name_medical"
        app:layout_constraintTop_toBottomOf="@id/timePicker"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        />

    <Button
        android:id="@+id/btn_add_reminder"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Add Reminder"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@drawable/btn_back"
        app:layout_constraintTop_toBottomOf="@id/name_medical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="35dp"
        />

</android.support.constraint.ConstraintLayout>
