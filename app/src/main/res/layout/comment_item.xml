<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:background="@color/white">



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comment_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginStart="15dp"
        android:src="@mipmap/happydoctor"
        />

        <TextView
            android:id="@+id/comment_auther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/comment_image"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="Medhat"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/comment_auther"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:text="17 june 2019"
            android:textStyle="bold"
            android:textSize="11sp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/comment_auther"
            app:layout_constraintStart_toStartOf="@id/comment_auther"
            android:layout_marginTop="15dp"
            android:text="content"
            android:lines="4"
            android:textColor="@color/black"
            />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>