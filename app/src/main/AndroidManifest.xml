<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.crazynet.medicalhub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Sign_upActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AskDiscussActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".home2Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".doctorForPatientActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddReminderActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name=".Reminder.Alarm_Receiver"
            android:enabled="true" />

        <service
            android:name=".Reminder.Alarm_Service"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".AddPostActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PatientForDaoctorActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddHistoryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cont_signActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".CommentsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>